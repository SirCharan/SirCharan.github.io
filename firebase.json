{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls":true,
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
      "source": "**/*.@(jpg|jpeg|gif|png|svg)",
      "headers":[{
      "key":"Cache-Control",
      "value":"max-age=86400"
      }]
      },
      {
        "source": "**/*.@(css|js)",
        "headers":[{
        "key":"Cache-Control",
        "value":"max-age=86400"
        }]
        },
      {
        "source": "/blog",
        "destination": "/blog-article/blog/index.html"
      },
      {
        "source": "/portfolio",
        "destination": "/portfolio.html"
      },
      {
        "source": "/thanks",
        "destination": "/thanks.html"
      }

    ]
  }
}
